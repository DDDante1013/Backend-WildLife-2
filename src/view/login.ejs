<!DOCTYPE html>
<html lang="es">

<%- include ("./partials/head.ejs") %>

  <body class="inicio-sesion">

    <%- include ("./partials/header.ejs") %>

      <form class="login" action="/login" method="post">
        <div class="contenedor-inicio">


          <h1 id="texto-inicio">Hola! Completa los datos para acceder a tu cuenta.</h1>

          <label for="userName">Nombre de Usuario</label>
          <input type="text" id="userName" name="userName" placeholder="Usuario" />


          <label for="password">Contraseña</label>
          <input type="password" id="password" name="password" placeholder="Contraseña" />

          <div class="recordad-usuario">
            <label for="rememberUser">Recordar Usuario</label>
            <input type="checkbox" id="rememberUser" />
          </div>
          <div class="olvide-contraseña">
            <label for="staylogged">Olvide contraseña</label>
            <input type="checkbox" id="staylogged" />
          </div>
          <button class="btn-1" type="submit">Ingresar</button>
          <p>¿Todavía no tenés una cuenta? - <a href="/register">Registrate</a></p>
        </div>
      </form>


      <%- include ("./partials/footer.ejs") %>
        <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
        <% if (typeof alert !="undefined" ){ %>
          <script>
            Swal.fire({
              title: "<%=alertTitle %>",
              text: "<%= alerMessage %>",
              icon: "<%=alerIcon %>",
              showconfirmButton: "<%= showConfirmButton%>",
              timer: "<%= timer %>",
            }).then(() => {
              window.location = " /<%= ruta %>"
            });                        
          </script>

          <% } %>
  </body>

</html>