<!DOCTYPE html>
<html lang="es">

<%- include ("./partials/head.ejs") %>

  <body class="inicio-sesion">

    <%- include ("./partials/headerAdmin.ejs") %>

      <!-- <input type="text" id="searchInput" placeholder="...Buscador Productos..."> -->
      <div id="contenedor-admin-producto">
        <form class="login" action="/addProduct" method="post">

          <div class="contenedor-inicio">
            <h1>Crear Producto</h1>
            <div class="subContainer">
              <div class="subSubContainer">
                <label for="productName">Nombre de producto</label>
                <input type="text" id="productName" name="name" placeholder="Nombre Producto" />
              </div>
              <div class="subSubContainer">
                <label for="description">Descripcion de producto</label>
                <input type="text" id="description" name="description" placeholder="Descripcion Producto" />
              </div>
              <div class="subSubContainer"">
                  <label for=" price">Precio de producto</label>
                <input type="number" id="price" name="price" placeholder="Precio Producto" />
              </div>
              <div class="subSubContainer">
                <label for="price">Stock</label>
                <input type="number" id="stock" name="stock" placeholder="1" />
              </div>
              <div class="subSubContainer">
                <label for=" image_url" ">Imagen de producto</label>
                  <input type=" url" id="image_url" name="image_url" name="image_url" />
              </div>
              <div class="subSubContainer">
                <button type="submit">Crear Producto</button>
              </div>
            </div>

          </div>
        </form>

        <table>
          <thead>
            <tr>
              <th>Codigo Producto</th>
              <th>Imagen</th>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th>Precio</th>
              <th>Stock</th>
              <th>Marca</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="data">

          </tbody>
        </table>
      </div>

      <%- include ("./partials/footer.ejs") %>


        <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
        <% if (typeof alert !="undefined" ){ %>

          <script>
            Swal.fire({
              title: "<%=alertTitle %>",
              text: "<%= alerMessage %>",
              icon: "<%=alerIcon %>",
              showconfirmButton: "<%= showConfirmButton%>",
              timer: "<%= timer %>",
            }).then(() => {
              window.location.href = "/<%=ruta %>"
            });                        
          </script>
          <% } %>

  </body>

</html>